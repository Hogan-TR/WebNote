{
    "name": "WebNote",
    "version": "0.0.1",
    "description": "Take notes directly in the page.",
    "manifest_version": 2,
    "permissions": ["storage", "tabs", "activeTab"],
    "background": {
        "scripts": ["js/background.js"]
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "WebNote",
        "default_icon": {
            "16": "images/p16.png",
            "32": "images/p32.png",
            "48": "images/p48.png",
            "128": "images/p128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/content-script.js"],
            "css": ["css/custom.css"],
            "run_at": "document_start"
        }
    ],
    "icons": {
        "16": "images/p16.png",
        "32": "images/p32.png",
        "48": "images/p48.png",
        "128": "images/p128.png"
    },
    "homepage_url": "https://blog.zeros.live"
}
