{
    "name": "WebNote",
    "version": "0.0.1",
    "description": "Take notes directly in the page.",
    "manifest_version": 2,
    "permissions": ["storage", "tabs"],
    "web_accessible_resources": ["js/inject.js"],
    "background": {
        "scripts": ["js/background.js"]
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "WebNote",
        "default_icon": {
            "128": "images/128.png",
            "16": "images/16.png",
            "19": "images/19.png",
            "32": "images/32.png",
            "38": "images/38.png",
            "48": "images/48.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/utils.js", "js/content-script.js"],
            "css": ["css/custom.css"],
            "run_at": "document_start"
        }
    ],
    "icons": {
        "128": "images/128.png",
        "16": "images/16.png",
        "19": "images/19.png",
        "32": "images/32.png",
        "38": "images/38.png",
        "48": "images/48.png"
    },
    "author": {
        "email": "trzerone@gmail.com"
    }
}
